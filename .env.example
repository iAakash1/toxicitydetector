# Environment variables for deployment
# Copy this to .env and fill in your values

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/toxicity_db"

# NextAuth.js
NEXTAUTH_SECRET="your-nextauth-secret-key-at-least-32-characters-long"
NEXTAUTH_URL="http://localhost:3000"

# OAuth Providers (optional - can be left empty)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# Email Provider (optional - can be left empty)
EMAIL_SERVER_HOST=""
EMAIL_SERVER_PORT=""
EMAIL_SERVER_USER=""
EMAIL_SERVER_PASSWORD=""
EMAIL_FROM=""

# Node Environment
NODE_ENV="development"